<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="dss" translate="label" sortOrder="300"> 
            <label><![CDATA[Dss Commerce]]></label> 
        </tab> 
        <section id="disable_compare" translate="label" type="text" sortOrder="100" showInDefault="1"
             showInWebsite="1" showInStore="1">
            <label>Disable Compare</label>
            <tab>dss</tab>
            <resource>Dss_DisableCompare::disable_compare</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" 
                showInWebsite="1" showInStore="1">
                <label>Disable Compare Configuration</label>
                <field id="enable" translate="label" type="select" sortOrder="0" showInDefault="1"
                     showInWebsite="1" showInStore="1">
                    <label>Disable Compare</label>
                    <comment><![CDATA[Version 0.0.1]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
